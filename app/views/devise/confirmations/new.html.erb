<%= render :partial => 'shared/user_layout' %>
<div class="container sing-in-container">
	<div class="form-signin">
		<h2>Resend confirmation instructions</h2>

		<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
		  <%= devise_error_messages! %>
		  <%= f.email_field :email, autofocus: true, class:'form-control', placeholder: :email %></div>

		  <div><%= f.submit "Resend confirmation instructions", class:"btn btn-lg btn-primary btn-block" %></div>
		<% end %>

		<%= render "devise/shared/links" %>
	</div>
</div>
