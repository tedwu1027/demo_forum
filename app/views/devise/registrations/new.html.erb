<%= render :partial => 'shared/user_layout' %>
<div class="container sing-in-container">
	<div class="form-signin">
	<h2>Sign up</h2>

	<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
		<%= devise_error_messages! %>

		
		<%= f.email_field :email, autofocus: true, class:'form-control top-input', placeholder: :email %>
		<%= f.password_field :password, autocomplete: "off", class:'form-control middle-input', placeholder: :password %>
		<%= f.password_field :password_confirmation, autocomplete: "off", class:'form-control bottom-input', placeholder: :password_confirmation %>

		<div><%= f.submit "Sign up", class:"btn btn-lg btn-primary btn-block" %></div>
	<% end %>

	<%= render "devise/shared/links" %>
	</div>
</div>
