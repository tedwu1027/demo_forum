<%= render :partial => 'shared/user_layout' %>
<div class="container sing-in-container">
	<div class="form-signin">
		<h2>Forgot your password?</h2>

		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
		  <%= devise_error_messages! %>

		  
		  <%= f.email_field :email, autofocus: true, class:'form-control single-input', placeholder: :email %>

		  <%= f.submit "Send me reset password instructions", class:"btn btn-lg btn-primary btn-block" %>
		<% end %>

		<%= render "devise/shared/links" %>
	</div>
</div>
